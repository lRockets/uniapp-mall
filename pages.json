{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"align": "left",
							"backgroundColor": "#f7f7f7",
							"borderRadius": "4px",
							"autoFocus": false,
							"placeholder": "请输入搜索内容",
							"placeholderColor": "#cccccc",
							"disabled": true
						},
						"buttons": [ //原生标题栏按钮配置,
							{
								"color": "#989898",
								"colorPressed": "#FD6801",
								"float": "left",
								"fontSize": "22px",
								"fontSrc": "/static/font/iconfont.ttf",
								"text": "\ue67a"
							},
							{
								"color": "#989898",
								"colorPressed": "#FD6801",
								"float": "right",
								"fontSize": "22px",
								"fontSrc": "/static/font/iconfont.ttf",
								"text": "\ue661"
							}
						]
					}
				}
			}
		}, {
			"path": "pages/class/class",
			"style": {
				"app-plus": {
					"scrollIndicator": "none", //隐藏滚动条
					"bounce": "none", //关闭反弹效果
					"titleNView": {
						// 搜索框配置
						"searchInput": {
							"align": "left",
							"backgroundColor": "#F7F7F7",
							"borderRadius": "4px",
							"placeholder": "智能积木 越野四驱车",
							"placeholderColor": "#CCCCCC",
							"disabled": true
						},
						//配置按钮
						"buttons": [
							// 右边
							{
								"color": "#999999",
								"colorPressed": "#BBBBBB",
								"float": "right",
								"fontSize": "22px",
								"fontSrc": "/static/font/iconfont.ttf",
								"text": "\ue67a"
							}
						]
					}
				}
			}
		},{
			"path": "pages/cart/cart",
			"style": {
				"app-plus":{
				    "scrollIndicator":"none",
					"titleNView":false
				}
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"app-plus":{
					"scrollIndicator":"none",
					"titleNView":false
				}
			}
		}
        ,{
            "path" : "pages/search/search",
            "style" : {
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"align": "left",
							"backgroundColor": "#f7f7f7",
							"borderRadius": "4px",
							"autoFocus": false,
							"placeholder": "请输入搜索内容",
							"placeholderColor": "#cccccc",
							"disabled": false
						},
						"buttons": [ //原生标题栏按钮配置,
							{
								"color": "#989898",
								"colorPressed": "#FD6801",
								"float": "right",
								"fontSize": "16px",
								"fontSrc": "/static/font/iconfont.ttf",
								"text": "搜索"
							}
						]
					}
				}
			}
        }
        ,{
            "path" : "pages/search-list/search-list",
            "style" : {
				"enablePullDownRefresh":true,
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"align": "left",
							"backgroundColor": "#f7f7f7",
							"borderRadius": "4px",
							"autoFocus": false,
							"placeholder": "请输入搜索内容",
							"placeholderColor": "#cccccc",
							"disabled": false
						},
						"buttons": [ //原生标题栏按钮配置,
							{
								"color": "#989898",
								"colorPressed": "#FD6801",
								"float": "right",
								"fontSize": "16px",
								"fontSrc": "/static/font/iconfont.ttf",
								"text": "搜索"
							}
						]
					}
				}
			}
        }
        ,{
            "path" : "pages/detail/detail",
            "style" : {
				"app-plus":{
					"scrollIndicator":"none",
					"bounce":"none",
					"titleNView":{
						"type":"transparent",
						"buttons":[
							{
								"type":"menu"
							}
						]
					}
				}
			}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#B5B5B5",
